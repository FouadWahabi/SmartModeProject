<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.iac.smartmodeproject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/ic_iac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:src="@drawable/ic_iac" />

    <com.iac.smartmodeproject.ui.widgets.AppTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_iac"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/author"
        android:textColor="#000000"
        android:textSize="20sp"
        app:typeface="roboto_regular" />

    <com.iac.smartmodeproject.ui.widgets.AppTextView
        android:id="@+id/fork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:autoLink="web"
        android:text="@string/fork"
        android:textColor="#000000"
        android:textSize="16sp"
        app:typeface="roboto_light" />

</RelativeLayout>